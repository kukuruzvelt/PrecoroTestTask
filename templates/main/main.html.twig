{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <h1>Products List</h1>
    <ul>
        {% for product in products %}
            <li>
                <strong>{{ product.name }}</strong>: ${{ product.price }}
            </li>
        {% else %}
            <li>No products available.</li>
        {% endfor %}
    </ul>
{% endblock %}
